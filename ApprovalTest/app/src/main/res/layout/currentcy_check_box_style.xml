<selector xmlns:android="http://schemas.android.com/apk/res/android">

<item android:drawable="@drawable/checked" android:state_checked="true"><color android:color="@color/background_color_black" />
</item>
<!-- checked -->
<item android:drawable="@drawable/unchecked" android:state_checked="false"><color android:color="@color/background_color_black"></color></item>
<!-- unchecked -->
<item android:drawable="@drawable/checked" android:state_focused="true"><color android:color="@color/background_color_black"></color></item>
<!-- on focus -->
<item android:drawable="@drawable/unchecked"><color android:color="@color/background_color_black"></color></item>
<!-- default -->
</selector>